<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="OptimizedDesktopPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- entities -->
		<class>com.enuminfo.optimized.backend.entity.CountryEntity</class>
		<class>com.enuminfo.optimized.backend.entity.CategoryEntity</class>

		<class>com.enuminfo.optimized.backend.entity.LocationEntity</class>
		<class>com.enuminfo.optimized.backend.entity.ProductEntity</class>
				
		<!-- Enable Second Level Cache -->
	    <shared-cache-mode>ALL</shared-cache-mode>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			
			<!-- Echo all executed SQL to stdout -->			
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hbm2ddl.auto" value="validate" />
			
		</properties>
	</persistence-unit>
</persistence>
